<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.berit.mymap.MainActivity"
    tools:showIn="@layout/activity_main">
    
    <fragment
        android:id="@+id/mymap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:background="#66FFFFFF">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="80dp"
                android:layout_marginLeft="4dp"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="CReset" />

            <TextView
                android:layout_width="80dp"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="WayPoint" />

            <TextView
                android:layout_width="80dp"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="Total" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginLeft="4dp"
                android:text="Distance" />

            <TextView
                android:id="@+id/textview_creset_distance"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="0" />

            <TextView
                android:id="@+id/textview_wp_distance"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="0" />

            <TextView
                android:id="@+id/textview_total_distance"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="0" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginLeft="4dp"
                android:text="Line" />

            <TextView
                android:id="@+id/textview_creset_line"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="0" />

            <TextView
                android:id="@+id/textview_wp_line"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="0" />

            <TextView
                android:id="@+id/textview_total_line"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:text="0" />
        </TableRow>
        </TableLayout>

    </RelativeLayout>

</RelativeLayout>
